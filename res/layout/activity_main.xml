<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

   
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:weightSum="100"> 
     <LinearLayout 
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_weight="50"
    android:layout_height="wrap_content">  
              <TextView
        android:id="@+id/dista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:textColor="#FFFFFF"
         android:textSize="20sp" 
         android:text="Current speed" /> 
  <TextView
        android:id="@+id/speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp" 
        android:textColor="#FFFFFF"
        android:text="0"/>
 
    <TextView
        android:id="@+id/label_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="15sp" 
        android:text="mph"/>
     </LinearLayout>
        
     
     <LinearLayout 
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_weight="50"
    android:layout_height="wrap_content"> 
                 <TextView
        android:id="@+id/distance_tot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:textColor="#FFFFFF"
         android:textSize="20sp" 
         android:text="Total Distance Travelled" />
         <TextView
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:textColor="#FFFFFF"
         android:textSize="35sp" 
         android:text="0" />
                  <TextView
        android:id="@+id/distance_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:textColor="#FFFFFF"
         android:textSize="20sp" 
         android:text="miles" />
             </LinearLayout>
             
     
  </LinearLayout>
     
     <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   
     
        android:text="" />
    

     <Button
        android:id="@+id/button_tre"
       android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SetTresholds"/>
     
         <Button
        android:id="@+id/speakButton"
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speech ON"/>

    
    <Button
        android:id="@+id/button_sim"
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/green_start_button"
        android:layout_gravity="center_horizontal"
        android:text=""/>
      
<LinearLayout android:id="@+id/graph"
    android:layout_width="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_height="wrap_content"/>
    
    
    

    
    
</LinearLayout>
